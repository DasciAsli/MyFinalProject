//JWT(Jason Web Token)'nin şablonunu oluşturuyoruz.
//Token'ın bizim jwtmiz olduğunu ispatlaması için gereklidir.
{
  "TokenOptions": {
    "Audience": "engin@engin.com", //Kitle
    "Issuer": "engin@engin.com", //Bunu uygulayan kişi
    "AccessTokenExpiration": 10, //Token'ın dk cinsinden geçerlilik süresi
    "SecurityKey": "mysupersecretkeymysupersecretkey" //Token'ı oluştururken asp.netin kullanacağı anahtarın ismi
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
